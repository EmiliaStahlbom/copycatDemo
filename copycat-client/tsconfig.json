{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "module": "ES2020",
    "baseUrl": "./",
    "outDir": "./dist/"
  },
  "include": [
    "src"
  ]
}
